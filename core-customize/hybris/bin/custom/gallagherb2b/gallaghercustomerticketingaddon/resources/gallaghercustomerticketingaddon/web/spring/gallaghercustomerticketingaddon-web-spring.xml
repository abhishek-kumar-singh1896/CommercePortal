<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/> 


	<!-- Expose /acceleratoraddon/web/webroot/WEB-INF/messages/base.js.properties  resource bundle as javascript variables -->
	<bean id="defaultGallaghercustomerticketingaddonJavaScriptMessageResourceAccessor" parent="abstractJavaScriptMessageResourceAccessor">
		<property name="addOnName" value="gallaghercustomerticketingaddon"/>
	</bean>

	<bean id="defaultGallaghercustomerticketingaddonBeforeViewJsPropsHandlerAdaptee" parent="abstractBeforeViewJsPropsHandlerAdaptee" class="de.hybris.platform.addonsupport.interceptors.ExportJsPropertiesBeforeViewHandler">
		<property name="messageSource" ref="defaultGallaghercustomerticketingaddonJavaScriptMessageResourceAccessor"/>
	</bean>

	<bean id="getGallaghercustomerticketingaddonBeforeViewHandler" parent="beforeViewHandlerAdapter">
		<property name="adaptee">
			<ref bean="defaultGallaghercustomerticketingaddonBeforeViewJsPropsHandlerAdaptee"/>
		</property>
	</bean>
	
	<!-- localization -->
	<bean id="messageSource"
	    class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
	    <property name="basenames">
	         <list>
	            <value>/WEB-INF/messages/base</value>
	            <value>/WEB-INF/messages/addons/gallaghercustomerticketingaddon/base</value>
	        </list>
	     </property>
	    <property name="defaultEncoding" value="UTF-8"/>
	</bean>
	
	<bean id="GallaghercustomerticketingaddonBeforeViewHandlerListMergeDirective" depends-on="beforeViewHandlersList" parent="listMergeDirective">
		<property name="add" ref="getGallaghercustomerticketingaddonBeforeViewHandler"/>
	</bean>
	 <bean id="CustomerTicketingSecureMediaFilterListMergeDirective" depends-on="defaultStorefrontTenantDefaultFilterChainList" parent="listMergeDirective">
        <property name="add" ref="attachmentsStorefrontWebAppMediaFilter"/>
    </bean>

    <bean id="attachmentsStorefrontWebAppMediaFilter" class="de.hybris.platform.servicelayer.web.WebAppMediaFilter">
        <property name="mediaPermissionService" ref="mediaPermissionService"/>
        <property name="modelService" ref="modelService"/>
        <property name="userService" ref="userService"/>
        <property name="mediaService" ref="mediaService"/>
    </bean>

    <bean depends-on="fileUploadUrlFilterMappings" parent="mapMergeDirective">
        <property name="key" value="/my-account/*support-ticket/**" />
        <property name="value" ref="csAttachmentsMultipartFilter" />
    </bean>

    <bean id="csAttachmentsMultipartFilter" class="org.springframework.web.multipart.support.MultipartFilter">
        <property name="multipartResolverBeanName" value="csAttachmentsMultipartResolver"/>
    </bean>
    <bean id="csAttachmentsMultipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" ref="csAttachmentUploadMaxSize"/>
    </bean>

	<bean id="csAttachmentUploadMaxSize" class="java.lang.Long">
		<constructor-arg type="long" value="10485760"/>
	</bean>
</beans>
