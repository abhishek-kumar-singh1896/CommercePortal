<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

	<!-- System Setup -->

	<bean id="gallagherb2binitialdataSampleDataImportService" class="com.gallagher.b2b.initialdata.setup.services.dataimport.impl.GallagherB2BinitialdataSampleDataImportService"
		  parent="sampleDataImportService">
	</bean>
	<bean id="gallagherb2binitialdataCoreDataImportService" class="com.gallagher.b2b.initialdata.setup.services.dataimport.impl.GallagherB2BinitialdataCoreDataImportService"
		  parent="gallagherCoreDataImportService">
	</bean>

	<alias alias="b2bAcceleratorCoreSystemSetup" name="gallagherB2BInitialDataSystemSetup" />
	<bean id="gallagherB2BInitialDataSystemSetup"
	      class="com.gallagher.b2b.initialdata.setup.GallagherB2BInitialDataSystemSetup"
	      parent="abstractCoreSystemSetup">
		<property name="coreDataImportService" ref="gallagherb2binitialdataCoreDataImportService"/>
		<property name="sampleDataImportService" ref="gallagherb2binitialdataSampleDataImportService"/>
	</bean>

	<!-- Solr field value providers TEMPORARY FOR NOW SO DO NOT NEED TO DEPEND ON yb2bacceleratorcore -->

	<bean id="securityB2BCategoryCodeValueProvider" parent="abstractCategoryCodeValueProvider">
		<property name="categorySource" ref="securityB2BCategorySource"/>
	</bean>
	<bean id="securityB2BBrandCategoryCodeValueProvider" parent="abstractCategoryCodeValueProvider">
		<property name="categorySource" ref="securityB2BBrandCategorySource"/>
	</bean>
	<bean id="securityB2BVariantCategoryCodeValueProvider" parent="abstractCategoryCodeValueProvider">
		<property name="categorySource" ref="securityB2BVariantCategorySource"/>
	</bean>


	<bean id="securityB2BCategoryNameValueProvider" parent="abstractCategoryNameValueProvider">
		<property name="categorySource" ref="securityB2BCategorySource"/>
	</bean>

	<bean id="securityB2BBrandCategoryNameValueProvider" parent="abstractCategoryNameValueProvider">
		<property name="categorySource" ref="securityB2BBrandCategorySource"/>
	</bean>

	<bean id="securityB2BCategorySource" parent="variantCategorySource">
		<property name="rootCategory" value="1"/> <!-- '1' is the root icecat category -->
	</bean>
	<bean id="securityB2BVariantCategorySource" parent="variantCategorySource"/>

	<bean id="securityB2BBrandCategorySource" parent="defaultCategorySource">
		<property name="rootCategory" value="brands"/> <!-- 'brands' is the root of the brands hierarchy -->
	</bean>

	<!-- Solr field value providers TEMPORARY FOR NOW SO DO NOT NEED TO DEPEND ON yb2bacceleratorcore -->


</beans>
