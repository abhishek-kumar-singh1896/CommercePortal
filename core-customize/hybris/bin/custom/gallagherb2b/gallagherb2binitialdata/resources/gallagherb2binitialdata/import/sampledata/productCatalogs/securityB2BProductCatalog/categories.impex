# ImpEx for Importing Categories into SecurityB2B Store

# Macros / Replacement Parameter definitions
$productCatalog=securityB2BProductCatalog
$productCatalogName=SecurityB2B Product Catalog
$catalogVersion=catalogversion(catalog(id[default=$productCatalog]),version[default='Staged'])[unique=true,default=$productCatalog:Staged]
$supercategories=source(code, $catalogVersion)[unique=true]
$categories=target(code, $catalogVersion)[unique=true]

$lang=en

# Insert Categories
INSERT_UPDATE Category;code[unique=true];allowedPrincipals(uid)[default='customergroup'];$catalogVersion
;Security
;Readers
;T-Series
;T-Series Readers

INSERT_UPDATE CategoryCategoryRelation;$categories;$supercategories
;Readers;Security
;T-Series;Readers
;T-Series Readers;T-Series

UPDATE Category;$catalogVersion;code[unique=true];name[lang=$lang];description[lang=$lang]
;;Security;Security;
;;Readers;Readers;
;;T-Series;T-Series;
;;T-Series Readers;T-Series Readers;