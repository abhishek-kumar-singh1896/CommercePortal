<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="gallagherbackofficeLabelLocator" class="com.hybris.cockpitng.util.labels.ResourcesLabelLocator" scope="singleton" init-method="init" lazy-init="false">
  		<property name="location" value="/gallagherbackoffice-backoffice-labels/"/>
  		<property name="name" value="labels"/>
  	</bean>
  	
  	<bean id="verifyCustomerHandler" class="com.gallagher.backoffice.handler.VerifyCustomerHandler" />
  	
  	<bean id="gallagherSaveCustomerHandler" class="com.gallagher.backoffice.handler.GallagherSaveCustomerHandler" />
  	
<!--   	<bean id="createCustomerForm" class="de.hybris.platform.b2badvancebackoffice.data.CreateCustomerForm"/> -->

	<alias name="gallagherBackofficeSynchronizationFacade" alias="synchronizationFacade"/>
   <bean id="gallagherBackofficeSynchronizationFacade"
          class="com.gallagher.backoffice.sync.facades.GallagherSynchronizationFacadeImpl" parent="defaultBackofficeSynchronizationFacade" />
          
     <alias name="gallagherDefaultEditorAreaLogicHandler" alias="editorAreaLogicHandler"/>
     <bean id="gallagherDefaultEditorAreaLogicHandler" class="com.gallagher.backoffice.handler.GallagherEditB2BCustomerHandler" parent="defaultEditorAreaLogicHandler">
      <property name="gallagherKeycloakService" ref="gallagherKeycloakService"/>
      <property name="customerConverter" ref="customerConverter"/> 
      <property name="baseStoreService" ref="baseStoreService"/>
      <property name="baseSiteService" ref="baseSiteService"/>
      <property name="notificationService" ref="notificationService"/>
      <property name="sessionService" ref="sessionService"/>
      <property name="storeSessionFacade" ref="storeSessionFacade"/>
      <property name="modelService" ref="modelService"/>
      <property name="eventService" ref="eventService"/>
      <property name="commonI18NService" ref="commonI18NService"/>
      <property name="gallagherC4COutboundServiceFacade" ref="gallagherC4COutboundServiceFacade"/>
     </bean>     

</beans>
