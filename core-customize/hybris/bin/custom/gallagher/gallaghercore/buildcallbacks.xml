 All hybris buildcallbacks.xml macrodefinitions:
 
 Build/Documentation
 
	 before/after ant macro "clean"
		 <macrodef name="gallaghercore_before_clean"/>
		 <macrodef name="gallaghercore_after_clean"/>

	 before/after ant macro "build"
		 <macrodef name="gallaghercore_before_build"/>
		 <macrodef name="gallaghercore_after_build"/>

	 before/after ant macro "compile_core" - the core module of the extension
		 <macrodef name="gallaghercore_before_compile_core">
		 <macrodef name="gallaghercore_after_compile_core">

	 before/after ant macro "compile_web" - the web module of the extension
		 <macrodef name="gallaghercore_before_compile_web" />
		 <macrodef name="gallaghercore_after_compile_web" />
 
 Preparing extension
 
	 will be called in the beginning of the ant call and only once (also when using multiple 
	 ant targets e.g. ant build yunittest)
		 <macrodef name="gallaghercore_only_once_prepare"/>
 
 Creating ear module/production
 
	 before/after ant macro "ear"
		 <macrodef name="gallaghercore_before_ear"/>
		 <macrodef name="gallaghercore_after_ear"/>

	 before/after ant macro "production" - for hybris server only
		 <macrodef name="gallaghercore_before_production" />
		 <macrodef name="gallaghercore_after_production" />
 
 JUnit Test
 
	 before/after ant macro "yunitinit" 
		 <macrodef name="gallaghercore_before_yunitinit" />
		 <macrodef name="gallaghercore_after_yunitinit" />

	 before/after ant macro "yunit"
		 <macrodef name="gallaghercore_before_yunit" />
		 <macrodef name="gallaghercore_after_yunit" /> 

 Distribution package
 
 	 before/after ant macro "dist" - internal target; only for use when platform is available in source code
		 <macrodef name="gallaghercore_after_dist"/>
		 <macrodef name="gallaghercore_before_dist"/>

	 before/after ant macro "dist_copy" - internal target; only for use when platform is available in source code
		 <macrodef name="gallaghercore_before_dist_copy"/>
		 <macrodef name="gallaghercore_after_dist_copy"/>

--><project name="gallaghercore_buildcallbacks">
    	
    <macrodef name="gallaghercore_after_build">
        		
        <sequential>
            			
            <impexGenerate extname="gallaghercore"/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="gallaghercore_after_clean">
        		
        <sequential>
            			
            <delete failonerror="false" file="${ext.gallaghercore.path}/resources-lang/touch_impexgen"/>
            		
        </sequential>
        	
    </macrodef>
    	
	
    <!-- exclude impex files from localization -->
     
	
    <patternset id="gallaghercore.localization.pattern">
        		
        <patternset refid="localization.defaultpattern"/>
        		
        <exclude name="**/*.impex"/>
        	
    </patternset>
    	


</project>
