<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="items.xsd">
	<collectiontypes>
		<collectiontype code="GallagherAccordionComponentList"
			elementtype="GallagherAccordionComponent" autocreate="true"
			type="list" />
	</collectiontypes>

	<itemtypes>

		<!-- Add your item definitions here -->
		<!-- Add your item definitions here -->
		<itemtype code="Customer" autocreate="false" generate="false">
			<description>Extending Customer type with an additional attribute.</description>
			<attributes>
				<attribute autocreate="true" generate="true"
					qualifier="duplicate" type="java.lang.Boolean">
					<modifiers optional="true" />
					<persistence type="property" />
					<defaultvalue>java.lang.Boolean.FALSE</defaultvalue>
					<description>Indicates if customer is duplicate or not</description>
				</attribute>
			</attributes>
		</itemtype>

        <!-- TypeGroups are for structure of this file only -->

      <typegroup name="cms">

			<itemtype code="GallagherFooterNavigationComponent" extends="FooterNavigationComponent" generate="true"
				autocreate="true" jaloclass="com.gallagher.core.jalo.GallagherFooterNavigationComponent">
				<description>CMS component to display the footer.</description>
				<attributes>
					<attribute type="SimpleBannerComponent" qualifier="siteLogo">
						<persistence type="property" />
						<description>Used to display the footer site Logo.</description>
					</attribute>
					<attribute type="CMSNavigationNode" qualifier="socialLinkNagivationNode">
						<persistence type="property" />
						<modifiers />
						<description>The cms navigation node for the social links.</description>
					</attribute>
					<attribute type="CMSNavigationNode" qualifier="footerLinkNagivationNode">
						<persistence type="property" />
						<modifiers />
						<description>The cms navigation node for the footer links.</description>
					</attribute>
					<attribute type="CMSNavigationNode" qualifier="countryDropdownLinkNagivationNode">
						<persistence type="property" />
						<modifiers />
						<description>The cms navigation node for the country dropdown links.</description>
					</attribute>
					<attribute type="CMSNavigationNode" qualifier="gallagherDivisionsLinkNagivationNode">
						<persistence type="property" />
						<modifiers />
						<description>The cms navigation node for the gallagher divisions links.</description>
					</attribute>
					<attribute qualifier="noticeHeader" type="localized:java.lang.String">
						<description>Intended to store a heading copyright notice or other text to be displayed in the footer</description>
						<persistence type="property" />
						<modifiers />
					</attribute>
				</attributes>
			</itemtype>
			
			<itemtype code="GallagherIconLinkComponent" autocreate="true" generate="true" extends="CMSLinkComponent"
				jaloclass="com.gallagher.core.jalo.LaminexQuickLinkComponent">
				<description>CMS component to display icon/image link with text.</description>
				<attributes>
					<attribute type="CMSImageComponent" qualifier="icon">
						<modifiers read="true" write="true" optional="true" />
						<persistence type="property" />
						<description>CMS component to display font icons.</description>
					</attribute>
				</attributes>
			</itemtype>
			
			<itemtype code="GallagherIconComponent" extends="CMSImageComponent" generate="true" autocreate="true"
				jaloclass="com.gallagher.core.jalo.LaminexIconComponent">
				<description>CMS component to display font icon or image</description>
				<attributes>
					<attribute type="java.lang.String" qualifier="styleClass">
						<modifiers read="true" write="true" optional="false" />
						<persistence type="property" />
						<description>Style class of the font icon.</description>
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="GallagherAccordionComponent"
				autocreate="true" generate="true" extends="SimpleCMSComponent"
				jaloclass="com.gallagher.core.jalo.GallagherAccordionComponent">
				<deployment table="Accordion" typecode="12000"/>
				<attributes>

					<attribute qualifier="description"
						type="java.lang.String">
						<modifiers optional="true" />
						<persistence type="property">
                            <columntype>
                                <value>varchar(2500)</value>
                            </columntype>
                        </persistence>
						<description>description for the category</description>
					</attribute>
					<attribute qualifier="heading" type="java.lang.String">
						<modifiers optional="true" />
						<persistence type="property" />
						<description>heading for the category</description>
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="GallagherAccordionListComponent"
				autocreate="true" generate="true" extends="SimpleCMSComponent"
				jaloclass="com.gallagher.core.jalo.GallagherAccordionListComponent">
				<deployment table="AccordionList" typecode="12001"/>
				<attributes>
					<attribute qualifier="accordionHeading"
						type="java.lang.String">
						<modifiers optional="true" />
						<persistence type="property" />
						<description>heading for the category</description>
					</attribute>
					<attribute qualifier="accordions"
						type="GallagherAccordionComponentList">
						<modifiers optional="true" />
						<persistence type="property" />
					</attribute>
					<attribute qualifier="buttonInfo"
						type="GallagherButtonComponent">
						<modifiers optional="true" />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="GallagherButtonComponent" autocreate="true"
				generate="true" extends="SimpleCMSComponent"
				jaloclass="com.gallagher.core.jalo.GallagherButtonComponent">
				<deployment table="GallagherButton" typecode="12002"/>
				<attributes>
					<attribute qualifier="buttonHeading"
						type="java.lang.String">
						<modifiers optional="true" />
						<persistence type="property" />
						<description>heading for the button</description>
					</attribute>
					<attribute qualifier="button" type="java.lang.String">
						<modifiers optional="true" />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
			
			<itemtype code="GallagherCategoryBannerComponent" autocreate="true"
				generate="true" extends="BannerComponent"
				jaloclass="com.gallagher.core.jalo.GallagherCategoryBannerComponent">
				<deployment table="CategoryBanner" typecode="12003"/>
			</itemtype>
			
		</typegroup>

	</itemtypes>
</items>
