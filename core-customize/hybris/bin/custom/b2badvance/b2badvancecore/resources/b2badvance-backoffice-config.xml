<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<config xmlns="http://www.hybris.com/cockpit/config">

    <!-- Perspective chooser configuration for suppliersGroup -->

    <context component="perspective-view-switcher" principal="suppliersGroup">
        <y:view-switcher xmlns:y="http://www.hybris.com/cockpitng/config/viewSwitcher">
            <y:authority name="supplierAuthorityGroup">
                <y:view id="pcmbackoffice"/>
            </y:authority>
        </y:view-switcher>
    </context>

    <context component="perspective-chooser" principal="suppliersGroup">
        <y:perspective-chooser xmlns:y="http://www.hybris.com/cockpitng/config/perspectiveChooser">
            <y:defaultPerspective name="pcmbackoffice"/>
        </y:perspective-chooser>
    </context>

</config>
