<htmlSection class="merchant_paycontent" xmlns="Paymetric:XiIntercept:MerchantHtmlPacketModel">
	
	<xiProperties error-class="xiInputError">
		<errorTooltip class="errorTooltip" show-effect="fadeIn"
			show-duration="5000" hide-effect="fadeOut" hide-duration="5000" />
	</xiProperties>

  <cardIndicatorSection>
  	 <tag name="div">
		  <cardTypeIndicator class="cardIndicator">
		    <items>
			  
			     <item for="american express" class="axIndicator" >				
                   <validateFor> 
                          <validate for="cvv" minlength="4" maxlength="4" maxlength-msg="Amex cvv must be 4 digits" minlength-msg="Amex cvv must be 4 digits"/> 
                   </validateFor> 
                 </item>
                 <item for="mastercard" class="mcIndicator" >
                        <validateFor> 
                               <validate for="cvv" minlength="3" maxlength="3" maxlength-msg="Master Card cvv must be 3 digits" minlength-msg="Master Card cvv must be 3 digits"/> 
                        </validateFor> 
                 </item>
                 <item for="visa" class="viIndicator">
                        <validateFor> 
                               <validate for="cvv" minlength="3" maxlength="3" maxlength-msg="Visa cvv must be 3 digits" minlength-msg="Visa cvv must be 3 digits"/> 
                        </validateFor> 
                 </item>    
<!--  			  <item for="discover" class="diIndicator" ></item> -->
		    </items>
		  </cardTypeIndicator>
	  </tag>
  	
  	<voidTag name="br" />
  	
    <tag name="div">
      <label for="cardholderName" text="Name on Card"/>
      <tboxCardHolderName class="xi-long-text"/>
      <validationMsg for="cardholderName" class="valmsg"/>
    </tag>
    <tag name="div">
      <label for="cardNumber" text="Card Number"/>
      <tboxCardNumber tokenize="true" class="xi-long-text" is-numeric="true" />
      <validationMsg for="cardNumber" class="valmsg"/>
    </tag>
    
    <tag name="div">
      <label for="expDate" text="Exp Date"/>
      <ddlExpMonth default-text="Month" class="month_date_combo" required="false" />
      <ddlExpYear default-text="Year" class="year_date_combo" years-to-display="10" required="false" exp-date="true"/>
      <validationMsg for="expYear" class="valmsg"/>
    </tag>
    
    <tag name='div'>
      <label for="cvv" text="Card CVV"/>
	  <tboxCvv class="CVV-input"  required="true"
      is-numeric="true" minlength="3" minlength-msg="Minimum 3 digits are allowed for a CVV." maxlength="4"  maxlength-msg="Maximum 4 digits are allowed for a CVV" />
      <validationMsg for='cvv' class='valmsg'/>
    </tag>
	  
	</cardIndicatorSection>

</htmlSection>
